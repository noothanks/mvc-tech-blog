<a href="/dashboard" class="btn"> &larr; Back to dashboard</a>

<article class="card">
  <h2 class="card-header">
    Edit Post
  </h2>
  <form class="card-body">
    <div>
      <label for="post-title" class="form-label">Title</label>
      <input type="text" id="post-title" name="post-title" class="form-input" />
    </div>
    <div>
      <label for="content" class="form-label">Post Content</label>
      <input id="content" name="content" class="form-input" />
    </div>
    <div>
      {{post.vote_count}} {{format_plural "point" post.vote_count}} by you on {{format_date post.created_at}}
      |
      <a href="/post/{{post.id}}">{{post.comments.length}} {{format_plural "comment" post.comments.length}}</a>
    </div>
    <button type="submit" class="btn">Save post</button>
    <button type="button" class="btn">Delete post</button>
  </form>
</article>

{{> comments post.comments}}

<div class="card">
    <form class="card-body">
  <div>
    <label for="comment-body" class="form-label">Leave a comment here:</label>
    <textarea name="comment-body" class="form-input"></textarea>
  </div>

  <div>
    <button type="submit" class="btn">Add comment</button>
  </div>
</form>
</div>

<script src="/javascript/edit-post.js"></script>
<script src="/javascript/deletePost.js"></script>
<script src="/javascript/comment.js"></script>