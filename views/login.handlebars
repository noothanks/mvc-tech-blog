<section class="card">
  <h2 class="card-header">Login:</h2>
  <form class="card-body" id="login-form">
    <div>
      <label for="email-login" class="form-label">Email:</label>
      <input type="text" id="email-login" class="form-input" />
    </div>
    <div>
      <label for="password-login" class="form-label">Password:</label>
      <input type="password" id="password-login" class="form-input" />
    </div>
    <div>
      <button type="submit" class="btn">login</button>
    </div>
  </form>
</section>

<section class="card">
  <h2 class="card-header">Signup:</h2>
  <form class="card-body" id="signup-form">
    <div>
      <label for="username-signup" class="form-label">Username:</label>
      <input type="text" id="username-signup" class="form-input" />
    </div>
    <div>
      <label for="email-signup" class="form-label">Email:</label>
      <input type="text" id="email-signup" class="form-input" />
    </div>
    <div>
      <label for="password-signup" class="form-label">Password:</label>
      <input type="password" id="password-signup" class="form-input" />
    </div>
    <div>
      <button type="submit" class="btn">signup</button>
    </div>
  </form>
</section>

<script src="/javascript/login.js"></script>